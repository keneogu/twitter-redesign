<div class="fill_form mt-4">
<div class="tweet_header text-dark d-flex">
   <p class="pt-3">TWEET SOMETHING</p>
</div>
<%= form_with model: @tweet do |f| %>
    <%= f.text_area :text, class: "form-control border-rounded", placeholder: "Let's Tweet Something nice"%>
    <br>
    <%= f.submit class: "btn btn-primary d-flex justify-content-end" %>
<% end %>
</div>