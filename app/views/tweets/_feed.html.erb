<% @tweets.each do |tweet| %>
   <div class="d-block index-feed">
   <div class="d-flex justify-content-between border-bottom">
   <div class="d-flex">
      <span class="avatar"><%= avatar_for(tweet.author)%></span>
      <p class="pl-2 pt-1"><%= tweet.author.username %></p>
	</div>
	<p><%= tweet.created_at.strftime("#{tweet.created_at.day.ordinalize} %B %Y") %></p>
   </div>

	<p><%= tweet.text %></p>
   <%=like_or_dislike_btn(tweet)%>
   <span class="text-primary"><%= likes_count(tweet) %></span>
	</div>
<% end %>
